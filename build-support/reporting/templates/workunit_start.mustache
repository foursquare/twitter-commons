<div id="__{{workunit.id}}__content">{{#collapsible}}{{workunit.id}}&&{{header_text}}&&{{open_or_closed}}&&spinner{{/collapsible}}</div>
<script>
  $(function(){
    pants.append('#__{{workunit.id}}__content', '#{{workunit.parent.id}}-content');
    $('#{{workunit.parent.id}}-icon').show();
    {{^is_tool}}pants.expandScope('{{workunit.parent.id}}');{{/is_tool}}
    pants.timerManager.startTimer('{{workunit.id}}', '#{{workunit.id}}-timer', 1000 * {{workunit.start_time}});
  });
</script>
